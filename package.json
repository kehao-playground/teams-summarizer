{
  "name": "teams-transcript-extension",
  "version": "1.0.0",
  "description": "Chrome extension for extracting Teams transcripts and generating AI summaries",
  "main": "background.js",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "build:analyze": "ANALYZE_BUNDLE=true npm run build",
    "build:optimize": "npm run build && node scripts/buildOptimizer.js",
    "dev": "webpack --mode=development --watch",
    "test": "jest",
    "test:bdd": "node test/bdd/test-runner.js",
    "test:bdd:smoke": "node test/bdd/test-runner.js smoke",
    "test:bdd:chrome": "node test/bdd/test-runner.js chrome",
    "test:bdd:regression": "node test/bdd/test-runner.js regression",
    "test:bdd:ci": "node test/bdd/test-runner.js ci",
    "test:bdd:debug": "HEADLESS=false SLOW_MO=250 node test/bdd/test-runner.js smoke",
    "test:all": "npm run test && npm run test:bdd:smoke",
    "test:task1": "node test/task1-validation.js",
    "validate": "node test/task1-validation.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "pretest:bdd": "npm run build:dev",
    "size-check": "node scripts/buildOptimizer.js",
    "perf-audit": "npm run build:optimize && npm run size-check"
  },
  "keywords": [
    "chrome-extension",
    "teams",
    "transcript",
    "ai",
    "summary"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.21",
    "chai": "^4.4.1",
    "compression-webpack-plugin": "^11.1.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cssnano": "^6.1.2",
    "eslint": "^8.57.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.8.0",
    "postcss": "^8.4.33",
    "postcss-loader": "^8.1.1",
    "puppeteer": "^24.14.0",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.3",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4"
  }
}
